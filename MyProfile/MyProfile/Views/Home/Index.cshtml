@model IEnumerable<MyProfile.Models.User>
@{ 
    
    int i = 1;
}

    <div class="container">
        <table class="table table-danger">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                       Age
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@i</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a>
                    </td>
                </tr>
                    i++;
                }
            </tbody>
        </table>
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>
    



   
